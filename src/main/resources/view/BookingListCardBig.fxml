<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<HBox id="bookingCardBigPane" fx:id="bookingCardBigPane" styleClass="card-big-pane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
  <GridPane HBox.hgrow="ALWAYS">
    <VBox alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="0">
      <padding>
        <Insets top="5" right="5" bottom="5" left="15" />
      </padding>
      <HBox spacing="5" alignment="CENTER_LEFT">
        <Label fx:id="id" text="\$id" styleClass="big_cell_id" visible="false"/>
        <Label fx:id="title" text="\$title" styleClass="big_cell_title" />
      </HBox>
      <FlowPane fx:id="tags" />
      <GridPane HBox.hgrow="ALWAYS">
        <children>
          <Label styleClass="big_cell_heading" text="Booked By:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
          <Label fx:id="booker" styleClass="big_cell_label" text="\$booker" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

          <Label styleClass="big_cell_heading" text="Booking Start:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
          <Label fx:id="startTime" styleClass="big_cell_label" text="\$startTime" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

          <Label styleClass="big_cell_heading" text="Booking End:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
          <Label fx:id="endTime" styleClass="big_cell_label" text="\$endTime" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

          <Label styleClass="big_cell_heading" text="Description:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
          <Label fx:id="description" styleClass="big_cell_label" text="\$description" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        </children>
      </GridPane>
    </VBox>
  </GridPane>
</HBox>
